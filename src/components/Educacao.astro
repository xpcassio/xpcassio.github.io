---
import Idiomas from "./Idiomas.astro";

// Internacionalization
let header;
const currentLocale = Astro.currentLocale;
if (currentLocale === 'en') {
    header = "Education";
}
else {
    header =  "Educação";
}
---
<div class="col-12 col-lg-10 offset-lg-1">
    <div class="row">
        <div class="col-12 col-lg-8 my-5">
            <div class="new-header">
                <hr class="d-print-none"/>
                <h3>{header}</h3>
            </div>
            <div class="row">
                <div class="col-12 col-md-6 mb-3">
                    <strong class="clearfix">Desenvolvimento Web e Mobile</strong>
                    <small class="text-muted clearfix">IFsulMG • Instituto Dederal de Educação, Ciência e Tecnologia do Sudeste de MG</small>
                    <small class="clearfix">Pós-Graduação</small>
                    <span class="badge badge-secondary w-50">Em andamento</span>
                </div>
                <div class="col-12 col-md-6 mb-3">
                    <strong class="clearfix">Especialização web management</strong>
                    <small class="text-muted clearfix">IESAM • Instituto de Ensino Superiores da Amazônia</small>
                    <small class="clearfix">Pós-Graduação</small>
                    <span class="badge badge-success w-50">Concluido</span>
                </div>
                <div class="col-12 col-md-6 mb-0">
                    <strong class="clearfix">Bacharel em Ciência da computação</strong>
                    <small class="text-muted clearfix">CESUPA • Centro Universitário do Estado do Pará</small>
                    <small class="clearfix text-bold">Graduação</small>
                    <span class="badge badge-success w-50">Concluido</span>
                </div>
            </div>
        </div>

        <Idiomas />
    </div>
</div>