---
export interface Props {
	title: string;
}

const { title } = Astro.props;

import stylesUrl from '../../public/css/global.min.css?url';
import Header from '../components/Header.astro';
import Menu from '../components/Menu.astro';
import Seo from '../components/Seo.astro';
import FooterAlt from '../components/FooterAlt.astro';

import bootstrapUrl from '../../public/css/bootstrap.min.css?url';
import jqueryUrl from '../../public/js/jquery-3.6.1.slim.min.js?url';
import bootstrapJsUrl from '../../public/js/bootstrap.bundle.min.js?url';
---

<!DOCTYPE html>
<html class="h-100" lang="pt-br">
<head>
	<!-- META -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<meta name="generator" content={Astro.generator} />

	<!-- SEO -->
	<Seo />

	<title>{title}</title>

	<!-- CSS -->
	<link rel="stylesheet" href={bootstrapUrl}>
	<link rel="stylesheet" href={stylesUrl}>
</head>
<body class="body-alt">
	<Header />
	<Menu />
	
	<slot />

	<!-- <Footer /> -->
	<FooterAlt />

	<!-- JS -->
	<script type="text/javascript" src={jqueryUrl}></script>
	<script type="text/javascript" src={bootstrapJsUrl}></script>
</body>
</html>